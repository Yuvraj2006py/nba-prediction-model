# NBA API Configuration
NBA_API_KEY=your_nba_api_key_here
NBA_API_BASE_URL=https://stats.nba.com/stats

# Betting Odds API Configuration
BETTING_API_KEY=your_betting_api_key_here
BETTING_API_BASE_URL=https://api.the-odds-api.com/v4

# Database Configuration (PostgreSQL in Docker)
DATABASE_TYPE=postgresql
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=nba_predictions
DATABASE_USER=nba_user
DATABASE_PASSWORD=nba_password
# SQLite fallback (if not using Docker)
DATABASE_PATH=./data/nba_predictions.db

# Model Configuration
MODEL_SAVE_PATH=./data/models
FEATURE_CACHE_PATH=./data/processed/features

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/nba_predictions.log

# Betting Strategy Configuration
INITIAL_BANKROLL=10000
MAX_BET_PERCENTAGE=0.05
MIN_CONFIDENCE_THRESHOLD=0.55
KELLY_FRACTION=0.25
MIN_BET_SIZE=10.0

# Data Collection Configuration
RATE_LIMIT_DELAY=1.0
MAX_RETRIES=3
RETRY_DELAY=5.0

# Basketball Reference Scraping
BBALL_REF_BASE_URL=https://www.basketball-reference.com
SCRAPING_DELAY=2.0

# Model Training Configuration
TEST_SIZE=0.2
VALIDATION_SIZE=0.1
RANDOM_STATE=42
CV_FOLDS=5

# Feature Engineering Configuration
DEFAULT_GAMES_BACK=10
FEATURE_CACHE_ENABLED=True

# Backtesting Configuration
COMMISSION_RATE=0.0
TRANSACTION_COST=0.0

